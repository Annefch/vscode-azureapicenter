{
  "name": "azure-api-center",
  "displayName": "Azure API Center",
  "description": "Build, discover, and consume APIs.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "azure-api-center.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "azure-api-center.showTreeView",
        "title": "Show Tree View"
      },
      {
        "command": "azure-api-center.refresh",
        "title": "Refresh"
      },
      {
        "command": "azure-api-center.open-api-docs",
        "title": "View Documentation"
      }
    ],
    "views": {
      "api-center-treeview": [
        {
          "id": "apiCenterTreeView",
          "name": "API Center",
          "icon": "media/api-center-icon.svg",
          "contextualTitle": "Azure API Center"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "api-center-treeview",
          "title": "API Center",
          "icon": "media/api-center-icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "azure-api-center.refresh",
          "when": "view == apiCenterTreeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "azure-api-center.open-api-docs",
          "when": "view == apiCenterTreeView && viewItem == parent"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "vscode": "^1.1.37"
  }
}
